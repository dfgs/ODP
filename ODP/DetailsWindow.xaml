<Window x:Class="ODP.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ODP"
        xmlns:views="clr-namespace:ODP.Views"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" x:Name="window"
        Title="Details" Height="450" Width="800">
    <Grid>
		<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
			<views:DetailsView SelectedObject="{Binding }"/>
		</ScrollViewer>
	</Grid>
</Window>
