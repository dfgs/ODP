<UserControl x:Class="ODP.Views.MediaReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:ODP.Views"
             mc:Ignorable="d" 
             Width="300" >
 	<StackPanel>
		<UniformGrid Columns="3">
			<TextBlock Text="{Binding RTPdelay,StringFormat=Delay: {0} ms,FallbackValue=Delay: NA}"/>
			<TextBlock Text="{Binding RTPjitter,StringFormat=Jitter: {0} ms,FallbackValue=Jitter: NA}"/>
			<TextBlock Text="{Binding PacketLossPercent,StringFormat=Packet loss: {0}%,FallbackValue=Packet loss: NA}"/>
		</UniformGrid>
		<views:RTPView />
	</StackPanel>
</UserControl>
