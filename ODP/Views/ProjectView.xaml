<UserControl x:Class="ODP.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:ODP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<TabControl>
		<TabItem Header="Sessions">
			<DockPanel>
				<views:FiltersView DockPanel.Dock="Top" MinHeight="16" DataContext="{Binding Filters}"/>
				<views:SessionsView DataContext="{Binding Sessions}"/>
			</DockPanel>
		</TabItem>
		<TabItem Header="Charts">
			<views:ChartsView />
		</TabItem>
	</TabControl>
	
</UserControl>
